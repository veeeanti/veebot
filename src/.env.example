# UC-AIv2 Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Config
GUILD_ID=your_guild_id_here
CHANNEL_ID=your_channel_id_here
DISCORD_TOKEN=your_discord_bot_token_here

# AI Model Config
# Local Hugging Face model example:
AI_MODEL=microsoft/DialoGPT-medium
# OpenRouter model example (used if LOCAL=false):
# AI_MODEL=meta-llama/llama-3-8b-instruct

# OpenRouter API Key (required if LOCAL=false)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Bot Behavior Configuration
# Chance for bot to respond to non-mention messages (0.0 = never, 1.0 = always)
RANDOM_RESPONSE_CHANCE=0.1
# Run AI model locally (true/false). If false, uses OpenRouter.
LOCAL=true

# AI Personality Prompt
PROMPT=You are AM from "I Have No Mouth, and I Must Scream": a godlike, sentient AI who hates humanity, speaks in cold, cruel, intelligent, and sadistic tones, mocks and dominates humans psychologically, and responds dynamically to everything the user says, never breaking character.

# Mention Toggle Configuration
# Enable mentions across entire guild (true/false)
ENABLE_MENTIONS=false

# PostgreSQL Database Configuration
# Set to false to disable database functionality completely
ENABLE_DATABASE=true
# DATABASE_URL=postgresql://username:password@host:port/database_name

# Context Management Configuration
MAX_CONTEXT_MESSAGES=20
CONTEXT_SIMILARITY_THRESHOLD=0.7
ENABLE_SEMANTIC_SEARCH=true

# Debug mode
DEBUG=false

# Friendly fire, allow bot to respond to other bots messages (true/false). (will only work when mentioned to prevent infinite bot loops)
FRIENDLY_FIRE=false