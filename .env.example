# Discord Bot Configuration

# 1. Discord Configuration (Required)
# Your Discord bot token from the Developer Portal
DISCORD_TOKEN=your_discord_token_here

# The ID of the primary server where the bot operates (Required for some features)
GUILD_ID=your_guild_id_here

# The specific channel ID where the bot will respond randomly or announce birthdays (Required)
CHANNEL_ID=your_channel_id_here

# The prefix for legacy commands (default: !)
BOT_PREFIX=!

# Channel ID where auto-moderation (spam detection) logs are sent (Optional)
MOD_LOG_CHANNEL_ID=

# 2. AI & Response Settings
# API key for OpenRouter (used for AI responses)
OPENROUTER_API_KEY=your_openrouter_key_here

# The specific AI model identifier to use (e.g., mistralai/mistral-7b-instruct)
AI_MODEL=mistralai/mistral-7b-instruct

# A custom system prompt to define the AI's personality
PROMPT=You are a helpful and slightly sarcastic Discord bot named UC-AI.

# Probability (0.0 to 1.0) of the bot responding to messages in the designated channel (default: 0.1)
RANDOM_RESPONSE_CHANCE=0.1

# Set to true to allow the bot to respond when pinged in any server
ENABLE_MENTIONS=true

# Set to true to allow the bot to process/respond to other bots
FRIENDLY_FIRE=false

# 3. Database Configuration
# Set to true to enable message storage and birthdays (default: false)
ENABLE_DATABASE=true

# Choose between 'sqlite' (local file) or 'postgres' (remote server)
DATABASE_TYPE=sqlite

# Path to the local database file (default: ./database.sqlite)
SQLITE_PATH=./database.sqlite

# Full PostgreSQL connection string (only if using 'postgres')
# DATABASE_URL=postgres://user:pass@host:5432/db

# Individual Postgres Settings (if DATABASE_URL is not provided)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=uc_aiv2
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password
# POSTGRES_SSL=false

# 4. Semantic Context & Memory
# Set to true to enable context-aware responses based on previous messages
ENABLE_SEMANTIC_SEARCH=true

# Number of recent messages to include in the AI's memory (default: 20)
MAX_CONTEXT_MESSAGES=20

# Sensitivity for finding related past messages (0.0 to 1.0, default: 0.7)
CONTEXT_SIMILARITY_THRESHOLD=0.7

# 5. Auto-Moderation (Spam Detection)
# Set to false to disable auto-ban logic (default: true)
SPAM_DETECTION_ENABLED=true

# Number of images sent within the window to trigger a ban (default: 4)
SPAM_IMAGE_THRESHOLD=4

# Number of links sent within the window to trigger a ban (default: 4)
SPAM_LINK_THRESHOLD=4

# Time window in milliseconds for spam detection (default: 30000)
SPAM_WINDOW_MS=30000

# 6. System & Debugging
# Set to true to enable detailed console logging
DEBUG=false

# Logging verbosity for the file logger (e.g., info, warn, error)
LOG_LEVEL=info

# The URL used for web searches (default: Google)
SEARCH_ENGINE=https://www.google.com/search?q=

# Boolean flag sometimes used for environment detection (e.g., true for development)
LOCAL=false
